{
  "manifest_version": 3,
  "name": "Meet Extension",
  "version": "1.0",
  "description": "A simple Chrome extension with live speech captions",
  "permissions": [
    "activeTab",
    "audioCapture"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meet Extension"
  }
}
